{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tasks Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the task"
      },
      "description": {
        "type": "string",
        "description": "A detailed description of the task"
      }
    },
    "required": ["name", "description"],
    "additionalProperties": false
  }
}